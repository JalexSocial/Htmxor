@page "/contacts"
@using Microsoft.AspNetCore.Components.Rendering
@inject ContactsRepository repo
@code {
    private IEnumerable<Contact> contacts = Enumerable.Empty<Contact>();

    [SupplyParameterFromQuery(Name = "q")]
    public string? Query { get; set; }

    protected override async Task OnInitializedAsync()
    {
        contacts = string.IsNullOrWhiteSpace(Query)
            ? await repo.All()
            : await repo.Search(Query);
    }

    private void Search()
    {
        
    }

    private void ContactRows(RenderTreeBuilder __builder)
    {
        foreach (var contact in contacts)
        {
            <tr>
                <td>
                    <input type="checkbox" name="selected" value="@contact.Id" />
                </td>
                <td>@contact.First</td>
                <td>@contact.Last</td>
                <td>@contact.Phone</td>
                <td>@contact.Email</td>
            </tr>
        }
    }
}
<ArchiveUI />
<form action="/contacts" method="get" class="tool-bar">
    <label for="search">Search Term</label>
    <input id="search" type="search" name="q" value="@Query"
           hx-get="/contacts"
           hx-trigger="search, keyup delay:200ms changed"
           hx-target="tbody"
           @onchange="Search"
           hx-push-url="true"
           hx-indicator="#spinner" />
    <img style="height: 20px" id="spinner" class="htmx-indicator" src="/img/spinning-circles.svg" />
    <input type="submit" value="Search" @onsubmit="Search" />
</form>

<form x-data="{ selected: [] }">
    <template x-if="selected.length > 0">
        <div class="box info tool-bar flxed top">
            <slot x-text="selected.length"></slot>
            contacts selected

            <button type="button" class="bad bg color border"
                    @click="confirm(`Delete ${selected.length} contacts?`) &&
                    htmx.ajax('DELETE', '/contacts', { source: $root, target: document.body })">
                Delete
            </button>
            <hr aria-orientation="vertical">
            <button type="button" @click="selected = []">Cancel</button>
        </div>
    </template>
    <table>
        <thead>
            <tr>
                <th></th>
                <th>First</th>
                <th>Last</th>
                <th>Phone</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @ContactRows
        </tbody>
    </table>
    <button hx-delete="/contacts"
            hx-confirm="Are you sure you want to delete these contacts?"
            hx-target="body">
        Delete Selected Contacts
    </button>
</form>
<p>
    <a href="/contacts/new">Add Contact</a>
    <span hx-get="/contacts/count" hx-trigger="revealed">
        <img id="spinner" style="height: 20px" class="htmx-indicator" src="/img/spinning-circles.svg" />
    </span>
</p>
