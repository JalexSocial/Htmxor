@inherits LayoutComponentBase
@inject FlashMessage FlashMessages
<div class="container">
    <header>
        <h1>
            <span class="text-uppercase">contacts.app</span><br />
            <span class="text-capitalize">A Demo Contacts Application</span>
        </h1>
    </header>
    <hr />
    @if (FlashMessages.Count > 0)
    {
        @foreach (var message in FlashMessages)
        {
            <div class="flash">@message</div>
        }
        <hr />
    }
    <CascadingValue IsFixed="true" Value="FlashMessages">
        @Body
    </CascadingValue>
</div>